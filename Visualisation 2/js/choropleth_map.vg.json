{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global CO₂ Emissions (2023)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "data/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "data/global_co2_2000_2023_filtered.csv"
        },
        "key": "country",
        "fields": ["co2", "year"]
      }
    },
    {"filter": "datum.year == 2023"},
    {"calculate": "datum.co2 + 0.1", "as": "CO₂ Emissions"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "CO₂ Emissions",
      "type": "quantitative",
      "scale": {"type": "log", "scheme": "reds"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "co2", "type": "quantitative", "title": "CO₂ Emissions (Mt)"}
    ]
  }
}
